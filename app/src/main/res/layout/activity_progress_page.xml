<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/newuser_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingLeft= "20dp"
        android:paddingRight = "20dp"
        android:paddingTop = "20dp"
        android:paddingBottom = "20dp">


    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="STATUS" />


        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:progress="0"
            android:layout_height="36dp" />

        <TextView
            android:textStyle="bold|italic"
            android:textSize="15dp"
            android:paddingBottom="30dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here is a list of all the activities to be completed by the end of the day:" />
        <TextView
            android:textSize="15dp"
            android:id="@+id/Name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="1. Take a relaxing bath" />


        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Completed"
            android:id="@+id/button_1"
            android:layout_above="@id/button_2"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textSize="15dp"
            android:id="@+id/father_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="2. Meditate for 15 minutes" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Completed"
            android:id="@+id/button_2"
            android:layout_above="@id/button_3"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="15dp"
            android:id="@+id/mother_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="3. Take a walk" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Completed"
            android:id="@+id/button_3"
            android:layout_above="@id/button_4"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="15dp"
            android:id="@+id/contact_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="4. Sit near nature" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Completed"
            android:id="@+id/button_4"
            android:layout_above="@id/button_5"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="15dp"
            android:id="@+id/alternate_phone_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="5. Listen to relaxing music" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Completed"
            android:id="@+id/button_5"
            android:layout_above="@id/Login2_button"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to home page"
            android:id="@+id/Login2_button"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:backgroundTint="@color/dark_green"/>


    </LinearLayout>
</ScrollView>




